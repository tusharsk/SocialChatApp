<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="com.example.lenovo.gupshup.ContactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".fragments.ContactList"
        tools:listitem="@layout/contact_layout" />

    <com.turingtechnologies.materialscrollbar.TouchScrollBar
        android:id="@+id/touch_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:msb_lightOnTouch="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>